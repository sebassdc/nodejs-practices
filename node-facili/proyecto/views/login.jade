extends ./layout.jade
block contenido
    div(class="col-md-6 no-float center-block big-top-space")
        form(action="/sessions", method="POST")
            div(class="form-group")
                label(for="email") Email
                input(class="form-control", type="text", name="email", placeholder="Email", id="email")
            div
                label(for="password") Contraseña
                input(class="form-control" type="password", name="password", placeholder="password", id="password")
            div(class="row top-space")
                div(class="col-xs-12 col-md-6")
                    input(type="submit" value="Iniciar sesión" class="btn btn-info")
                div(class="col-xs-12 col-md-6 text-right")
                    a(href="/singup") No tengo cuenta
